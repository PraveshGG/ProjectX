<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.projectx.HomeActivity"
    tools:showIn="@layout/app_bar_home"
    android:orientation="vertical"
    android:weightSum="2">

    <LinearLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.82"
        android:orientation="vertical">

    </LinearLayout>

    <com.roughike.bottombar.BottomBar
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".19"
        app:bb_inActiveTabColor="@color/blackishWhite"
        app:bb_activeTabColor="@color/white"
        android:background="#8064a2"
        android:layout_alignParentBottom="true"
        app:bb_tabXmlResource="@xml/bottombar_tabs" />

</LinearLayout>
    <!--app:itemBackground="?attr/colorPrimary" if app:itemBackground is used thenripple effect
                                                    //is disabled-->
