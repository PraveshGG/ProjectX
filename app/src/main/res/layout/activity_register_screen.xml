<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="6"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:gravity="center|bottom"
        android:paddingBottom="@dimen/_5sdp"
        android:text="@string/text_app_enter_your_phone_number"
        android:textColor="@color/projectX"
        android:textSize="@dimen/_20ssp"
        /> //0.8
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:gravity="center"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingRight="@dimen/_8sdp"
        android:text="@string/text_app_description2"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp"
        /> //1.6

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".6"
        android:paddingBottom="@dimen/_3sdp"
        android:paddingLeft="@dimen/_13sdp"
        android:paddingRight="@dimen/_13sdp">
        <Spinner
            android:id="@+id/spinner"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/_11sdp"
            android:paddingRight="@dimen/_11sdp"
            /> //2.6

    </LinearLayout>

    <com.lamudi.phonefield.PhoneInputLayout
        android:id="@+id/country"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".8"
        android:paddingLeft="@dimen/_12sdp"
        android:paddingRight="@dimen/_15sdp">

    </com.lamudi.phonefield.PhoneInputLayout>//3.2


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".6"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_11sdp"
        android:weightSum="3">

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".8"/>
        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:background="@drawable/button_custom_text_box"
            android:gravity="center"
            android:text="@string/button_continue"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp"
            />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".8"/>
    </LinearLayout> //3.8

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.4"
        android:gravity="center|bottom"
        android:paddingTop="@dimen/_75sdp"
        android:text="@string/grayCode"
        android:textSize="@dimen/_14ssp"/>



</LinearLayout>
